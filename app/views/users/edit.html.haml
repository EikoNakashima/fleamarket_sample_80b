.Page
  .HeadContent
    = render "devise/shared/header"

  .MainContent
    .MainContent__Signin
      プロフィール編集
    = form_for(current_user) do |f|
      .MainContent__Signin__Form
        = f.label :ニックネーム, class: 'FormTitle'
        %br/
        = f.text_field :nickname, autofocus: true, class: 'FormBar'
      .MainContent__Signin__Form
        = f.label :紹介文, class: 'FormTitle'
        %br/
        = f.text_field :introduction, placeholder: "例）こんにちは。よろしくお願いします", autofocus: true, class: 'FormBar'
      .MainContent__Signin__Form
        = f.label :Eメール, class: 'FormTitle'
        %br/
        = f.email_field :email, autocomplete: "email", class: 'FormBar'
      .Actions
        = f.submit "編集完了", class: 'CommitBtn'

  .FootContent
    = render "devise/shared/footer"
  

