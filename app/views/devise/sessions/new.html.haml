.Page
  .HeadContent
    = render "devise/shared/header"

  .MainContent
    .MainContent__Login
      ログイン
      .Transition_SignUp
        アカウントをお持ちでない方はこちら
        = link_to new_user_registration_path, class: "Transition_Btn" do
          新規会員登録
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .MainContent__Login__Form
        = f.label :Eメール, class: 'FormTitle'
        %br/
        = f.email_field :email, placeholder: "PC•携帯どちらでも可", autofocus: true, autocomplete: "email", class: 'FormBar'
      .MainContent__Login__Form
        = f.label :パスワード, class: 'FormTitle'
        %br/
        = f.password_field :password, placeholder: "7文字以上の半角英数字", autocomplete: "current-password", class: 'FormBar'
      .Actions
        = f.submit "ログイン", class: 'CommitBtn'

  .FootContent
    = render "devise/shared/footer"